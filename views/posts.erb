<% posts.each do |post| %>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><%= h post.subject %></h3>
    </div>
    <div class="panel-body">
        <%= post.body %>
    </div>
    <div class="panel-footer">
        <p>
            <%= h post.from %> @ <%= _fmt_date(post.created_at) %>
            <% if post.comments.empty? %>
                       <a href="<%= to("/post/#{post.id}") %>"><span class="label label-default pull-right"><%= _fmt_comments(0) %></span></a>
            <% else %>
                <a href="<%= to("/post/#{post.id}") %>"><span class="label label-info pull-right"><%= _fmt_comments(post.comments.size) %></span></a>
            <% end %>
        </p> 
    </div>
</div>
<% end %>
